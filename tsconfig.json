{
  "compilerOptions": {
    "target": "ES2018",
    "module": "UMD",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2018", "DOM"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
