{
  "name": "template-ts-npm",
  "version": "1.1.0",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "rollup": "rollup -c",
    "build": "tsup src/index.ts --format esm,cjs,iife --legacy-output --dts --minify",
    "test": "jest",
    "docs": "typedoc",
    "lint": "eslint ./src/**",
    "format": "prettier --write .",
    "release": "standard-version",
    "publish": "npm run release && npm publish"
  },
  "keywords": [
    "typescript",
    "module",
    "library",
    "open-source"
  ],
  "author": "Monadica <monadicarts@gmail.com>",
  "license": "MIT",
  "description": "Base TypeScript NPM Project Template for Monadica.",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rollup": "^4.25.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
