{
  "name": "@monadica/template-ts-npm",
  "version": "1.2.0",
  "source": "src/index.ts",
  "browser": "dist/index.js",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "types": "dist/types.d.ts",
  "type": "module",
  "scripts": {
    "serve": "parcel docs/index.html --open firefox",
    "watch": "parcel watch",
    "prebuild": "npx rimraf dist/*",
    "build": "parcel build src/index.ts",
    "prepare": "npm run build",
    "precompress": "rm dist/template-ts-npm.*",
    "compress": "tar -czvf template-ts-npm.tar.gz dist && zip -r template-ts-npm.zip dist && mv template-ts-npm.* dist/",
    "test": "jest",
    "docs": "typedoc",
    "postdocs": "npm run format",
    "lint": "eslint ./src",
    "postlint": "npm run format",
    "format": "prettier --write .",
    "release": "standard-version",
    "publish:public": "npm publish --access public"
  },
  "keywords": [
    "typescript",
    "module",
    "library",
    "open-source"
  ],
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/monadicarts/template-ts-npm.git"
  },
  "author": "Monadica <monadicarts@gmail.com>",
  "license": "MIT",
  "description": "A TypeScript project template for npm packages",
  "devDependencies": {
    "@parcel/bundler-library": "^2.12.0",
    "@parcel/compressor-brotli": "^2.13.0",
    "@parcel/compressor-gzip": "^2.13.0",
    "@parcel/optimizer-cssnano": "^2.13.0",
    "@parcel/optimizer-terser": "^2.13.0",
    "@parcel/packager-ts": "^2.13.0",
    "@parcel/transformer-typescript-tsc": "^2.13.0",
    "@parcel/transformer-typescript-types": "^2.13.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "parcel": "^2.13.0",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "targets": {
    "default": {
      "distDir": "./dist"
    }
  },
  "engines": {
    "npm": ">=10.0.0 <11.0.0",
    "node": ">=23.0.0 <24.0.0"
  }
}
